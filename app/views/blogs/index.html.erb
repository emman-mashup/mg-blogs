<%= stylesheet_link_tag('styles') %>

<nav class="navbar navbar-expand-lg ">
  <div class="navbar-main">
    <div class="blogslogo-style">
      <%= image_tag "MG_BLOGS_LOGO.svg", :class => ""  %>
    </div>
    
    <div class="form-group has-search">
      <span class="fas fa-search form-control-feedback"></span>
      <input type="text" class="form-control blogs-search" placeholder="Search Post">
    </div>
    
    <div class="blogs-navbutton">
    <% if user_signed_in? %>
      <div class="dropdown">
        <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <%= current_user.username %>
        </a>

        <ul class="dropdown-menu">
          <li><%= link_to "My Profile", users_path(@users), class:"dropdown-item" %></li>
          <li><%= link_to "Sign out", signout_path, class:"dropdown-item" %></li>
          <% else %>
          <%= link_to "Login", user_session_path(@users), class: "login-link" %>
          <%= button_to "Sign up", new_user_registration_path(@users), :method => :get, class: "blogs-loginbutton" %>
        <% end %>
        </ul>
      </div> 
    </div>
  </div>
</nav>

